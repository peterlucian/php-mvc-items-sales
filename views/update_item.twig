{% extends 'layout.twig' %} 

{% block title %}
    Add item
{% endblock %}

{% block content %}
    {% if errorMessage is defined %}
        <div class="container">
            <h2>{{ errorMessage }}</h2>
        </div>
    {% endif %}
    <div class="container">
        <form  action="/update/{{key}}" method="post">
            <div class="form-group mb-3">
                <input class="form-control" type="text" name="productName" value="{{productName}}" class="search-field" placeholder="Enter product name...">
            </div>
            <div class="form-group mb-3">
                <input class="form-control" type="text" name="productDescription" value="{{description}}" class="search-field" placeholder="Enter product description...">
            </div>
            <div class="form-group mb-3">
                <input class="form-control" type="text" name="price" value="{{price}}" class="search-field" placeholder="Enter price.">
            </div>
            <div class="form-group mb-3">
                <input class="form-control" type="text" name="imageUrl" value="{{imageUrl}}" class="search-field" placeholder="Enter image url...">
            </div>
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary" name="update"> update item </button>
            </div>
        </form>
    </div>
{% endblock %}